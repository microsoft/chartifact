{
  "name": "@microsoft/chartifact-schema",
  "version": "1.0.0",
  "main": "index.js",
  "types": "dist/idoc.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "schema": "ts-json-schema-generator --path src/schema.ts --type InteractiveDocumentWithSchema --out dist/idoc.schema.json",
    "copy-schema": "node scripts/copy-schema.js",
    "declaration": "rollup -c rollup.config.types.js",
    "strip-blanks": "node scripts/strip-blanks.js",
    "dev": "tsc -p . -w",
    "tsc": "tsc -p .",
    "build": "npm run tsc && npm run declaration && npm run strip-blanks && npm run schema && npm run copy-schema",
    "build:00": "npm run build",
    "esbuild": "node esbuild.config.js",
    "esbuild:watch": "node esbuild.config.js --watch",
    "build:esbuild": "npm run esbuild && npm run strip-blanks && npm run schema && npm run copy-schema"
  },
  "author": "Dan Marshall",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "esbuild": "^0.25.9",
    "esbuild-plugin-d.ts": "^1.3.1",
    "rollup": "^4.50.1",
    "rollup-plugin-dts": "^6.2.3",
    "ts-json-schema-generator": "^2.4.0",
    "vega": "^6.1.2",
    "vega-typings": "^2.0.1"
  }
}
