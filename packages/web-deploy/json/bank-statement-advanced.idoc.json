                    }
                }
            ]
        },
        {
            "groupId": "patterns",
            "elements": [
                "### üìÖ Day of Week Patterns",
                {
                    "type": "chart",
                    "chartKey": "dayOfWeekSpending"
                }
            ]
        },
        {
            "groupId": "categories",
            "elements": [
                "### üìä Category Deep Dive",
                {
                    "type": "chart",
                    "chartKey": "budgetComparisonChart"
                }
            ]
        },
        {
            "groupId": "transactions",
            "elements": [
                "### üìã Transaction History",
                "**Edit transactions below to update your analysis**",
                {
                    "type": "tabulator",
                    "variableId": "editableTransactions",
                    "dataSourceName": "transactions",
                    "editable": true,
                    "tabulatorOptions": {
                        "layout": "fitColumns",
                        "maxHeight": "400px",
                        "columns": [
                            {
                                "title": "Date",
                                "field": "date",
                                "sorter": "date",
                                "editor": "date"
                            },
                            {
                                "title": "Description",
                                "field": "description",
                                "editor": "input"
                            },
                            {
                                "title": "Merchant",
                                "field": "merchant",
                                "editor": "input"
                            },
                            {
                                "title": "Category",
                                "field": "category",
                                "editor": "list",
                                "editorParams": {
                                    "values": ["Income", "Housing", "Food", "Transportation", "Utilities", "Entertainment", "Healthcare", "Shopping", "Health", "Savings"]
                                }
                            },
                            {
                                "title": "Amount",
                                "field": "amount",
                                "formatter": "money",
                                "formatterParams": {
                                    "symbol": "$",
                                    "precision": 2
                                },
                                "editor": "number",
                                "editorParams": {
                                    "step": 0.01
                                }
                            },
                            {
                                "title": "Type",
                                "field": "type",
                                "editor": "list",
                                "editorParams": {
                                    "values": ["income", "expense", "transfer"]
                                }
