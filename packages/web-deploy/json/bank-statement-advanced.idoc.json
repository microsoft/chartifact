        {
            "groupId": "merchants",
            "elements": [
                "### üè™ Top Merchants",
                {
                    "type": "tabulator",
                    "dataSourceName": "topMerchants",
                    "editable": false,
                    "tabulatorOptions": {
                        "layout": "fitColumns",
                        "columns": [
                            {
                                "title": "Merchant",
                                "field": "merchant",
                                "sorter": "string"
                            },
                            {
                                "title": "Total Spent",
                                "field": "totalSpent",
                                "formatter": "money",
                                "formatterParams": {
                                    "symbol": "$",
                                    "precision": 2
