        {
            "groupId": "metrics",
            "elements": [
                "### üéØ Key Metrics",
                "",
                "<div class='metric'>",
                "<div class='value'>{{savingsRate}}</div>",
                "<div class='label'>Savings Rate</div>",
                "</div>",
                "",
                "<div class='metric'>",
                "<div class='value'>{{avgDailySpending}}</div>",
                "<div class='label'>Avg Daily Spending</div>",
                "</div>",
                "",
                "#### Financial Health",
