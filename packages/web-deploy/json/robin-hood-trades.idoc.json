        {
            "groupId": "profitable",
            "elements": [
                "### üìä Profitability by Company",
                {
                    "type": "tabulator",
                    "dataSourceName": "profitByCompany",
                    "cssClass": "compact-table",
                    "tabulatorOptions": {
                        "layout": "fitColumns",
                        "headerSort": false,
                        "initialSort": [
                            {"column": "netProfit", "dir": "desc"}
