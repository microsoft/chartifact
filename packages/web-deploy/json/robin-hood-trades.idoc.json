    "resources": {
        "charts": {
            "profitChart": {
                "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
                "width": "container",
                "height": 350,
                "data": {
                    "name": "profitByCompany"
                },
                "mark": {
                    "type": "bar",
                    "cornerRadiusEnd": 4
                },
                "encoding": {
                    "x": {
                        "field": "stock",
                        "type": "nominal",
                        "title": "Stock Symbol",
                        "sort": {"field": "netProfit", "order": "descending"}
                    },
                    "y": {
                        "field": "netProfit",
                        "type": "quantitative",
                        "title": "Net Profit/Loss ($)"
                    },
                    "color": {
                        "field": "netProfit",
                        "type": "quantitative",
                        "scale": {
                            "domain": [-3000, 0, 3000],
                            "range": ["#ff5757", "#1a2332", "#00d09c"]
                        },
                        "legend": null
                    },
                    "tooltip": [
                        {"field": "stock", "type": "nominal", "title": "Stock"},
                        {"field": "company", "type": "nominal", "title": "Company"},
                        {"field": "netProfit", "type": "quantitative", "title": "Net P&L", "format": "$,.2f"},
                        {"field": "profitStatus", "type": "nominal", "title": "Status"}
                    ]
                },
                "config": {
                    "axis": {
                        "labelColor": "#a0aec0",
                        "titleColor": "#a0aec0",
                        "domainColor": "#2d3748",
                        "tickColor": "#2d3748"
                    },
                    "background": "#1a2332"
                }
            }
        }
    }
