                        "columns": [
                            {
                                "title": "Stock",
                                "field": "stock",
                                "width": 80
                            },
                            {
                                "title": "Company",
                                "field": "company",
                                "width": 200
                            },
                            {
                                "title": "Net P&L",
                                "field": "netProfit",
                                "formatter": "money",
                                "formatterParams": {
                                    "symbol": "$",
                                    "precision": 2
                                },
